<div class="mx-auto max-w-5xl px-4 sm:px-6 lg:px-8 py-8">

  <div class="mb-6">
    <.link
      navigate={~p"/workspace"}
      class="inline-flex items-center gap-2 text-sm font-medium text-zinc-500 hover:text-zinc-900 dark:text-zinc-400 dark:hover:text-zinc-200 transition-colors"
    >
      <.icon name="hero-arrow-left" class="size-4" />
      Voltar
    </.link>
  </div>

  <div class="flex flex-col sm:flex-row sm:items-center justify-between gap-6 mb-8">
    <div>
      <h1 class="text-xl font-semibold text-zinc-900 dark:text-zinc-100">
        Espelho de Ponto
      </h1>
      <p class="mt-1 text-sm text-zinc-500 dark:text-zinc-400">
        Visualizando histórico de <span class="font-bold"><%= @employee.full_name %></span>
      </p>
    </div>
    
    <PontodigitalWeb.EmployeeLive.Components.HistoryComponents.filter_bar
      month={@selected_month}
      year={@selected_year}
      employee={@employee}
    />
  </div>

  <div class="flex flex-col gap-6">
    <div class="bg-white dark:bg-zinc-800 rounded-lg shadow-sm border border-zinc-200 dark:border-zinc-700 p-4 flex items-center justify-between">
      <div>
        <h3 class="text-sm font-medium text-zinc-500 dark:text-zinc-400">Saldo Total do Mês</h3>
        <p class="text-xs text-zinc-400 mt-1">Cálculo baseado na jornada prevista</p>
      </div>
      <div class="text-3xl font-bold tracking-tight text-zinc-900 dark:text-zinc-100">
        <PontodigitalWeb.EmployeeLive.Components.HistoryComponents.balance_badge 
          saldo={@report.formatted_total} 
          large={true} 
        />
      </div>
    </div>

    <PontodigitalWeb.EmployeeLive.Components.HistoryComponents.report_table
      report={@report}
    />
  </div>
</div>
<%= if @report_modal do %>
  <div class="fixed inset-0 z-50 flex items-center justify-center p-4 bg-zinc-900/80 backdrop-blur-sm animate-in fade-in duration-200">
    
    <div class="absolute inset-0" phx-click="close_modal"></div>

    <div class="relative z-10 w-full max-w-lg animate-in zoom-in-95 duration-200">
      <.live_component 
        module={PontodigitalWeb.EmployeeLive.Components.ReportErrorComponent} 
        id="report-error-modal" 
        context_date={@report_modal.date} 
        employee_id={@employee.id} 
      />
    </div>
  </div>
<% end %>